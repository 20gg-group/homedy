<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/backgroundColor"
    tools:ignore="HardcodedText">

    <!-- content header image -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_header"
            android:src="@drawable/sample"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/titleColor"
            android:alpha="0.7"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">


            <TextView
                android:id="@+id/tv_title_header"
                android:text="Phòng full nội thất, giờ tự do, có thang máy, giường tủ máy lạnh tivi, mới xây ( cv làng hoa )"
                android:textColor="@color/backgroundColor"
                style="@style/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <!-- content body layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <!-- User part -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                style="@style/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGƯỜI ĐĂNG" />

            <TextView
                android:id="@+id/tv_saved_body"
                style="@style/subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_heart_border"
                android:drawablePadding="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/backgroundColor"
                android:text="Lưu tin"
                android:background="@drawable/shape_saved"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_avatar_body"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:riv_corner_radius="16dp" />

            <TextView
                android:id="@+id/tv_username_body"
                style="@style/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Võ Xuân Bách"
                app:layout_constraintStart_toEndOf="@+id/img_avatar_body"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/tv_email_body"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="vobach1997ts@gmail.com"
                app:layout_constraintStart_toEndOf="@+id/img_avatar_body"
                app:layout_constraintTop_toBottomOf="@+id/tv_username_body" />

            <TextView
                android:id="@+id/tv_phone_body"
                style="@style/h6headline"
                android:text="01686943342"
                android:textColor="@color/mainColor"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawablePadding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_avatar_body"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_body"/>
        </android.support.constraint.ConstraintLayout>

        <!--Divider line-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@color/dividerLine" />

        <!--General information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="THÔNG TIN CHUNG"
                style="@style/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/subtitle2"
                        android:text="Loại tin: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_type_header"
                        style="@style/body2"
                        android:layout_marginStart="4dp"
                        android:text="Nhà cho thuê"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="Đối tượng:"/>

                    <TextView
                        android:id="@+id/tv_object_header"
                        style="@style/body2"
                        android:text="Tất cả"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Diện tích:"
                        style="@style/subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_area_body"
                        android:text="25m²"
                        style="@style/subtitle2"
                        android:textColor="@color/mainColor"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Giá cho thuê:"
                        style="@style/subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_price_body"
                        android:text="3.3 triệu/tháng"
                        android:textColor="@color/colorSecondaryDark"
                        style="@style/subtitle2"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ:" />

                <TextView
                    android:id="@+id/tv_address_body"
                    style="@style/body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Đường Phạm Văn Chiêu, Quận Gò Vấp, Hồ Chí Minh"
                    android:singleLine="true" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_direct_body"
                android:drawableStart="@drawable/ic_direct"
                style="@style/body2"
                android:text="Chỉ đường"
                android:drawablePadding="4dp"
                android:textColor="@color/mainColor"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- divider line -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="7dp"
            android:src="@color/dividerLine" />

        <!--Description information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="MÔ TẢ CHI TIẾT"
                style="@style/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_description_body"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--&lt;!&ndash; divider line &ndash;&gt;-->
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginBottom="6dp"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:src="@color/dividerLine" />-->

        <!--<Button-->
            <!--android:id="@+id/btn_collapse_body"-->
            <!--android:text="Thu gọn"-->
            <!--style="@style/button"-->
            <!--android:background="@color/colorSecondaryDark"-->
            <!--android:layout_gravity="center"-->
            <!--android:textColor="@color/backgroundColor"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp" />-->

    </LinearLayout>

</LinearLayout>